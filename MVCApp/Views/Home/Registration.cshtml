@using MVCApp.ViewModels
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Busya and I</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        .custom-input {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="text-center">Registration Form</h2>
                <form method="post" asp-action="AddUser" asp-controller="Home">
                    <div class="form-group custom-input">
                        <input class="form-control" type="text" placeholder="Your Name" name="Name" />
                    </div>
                    <div class="form-group custom-input">
                        <input class="form-control" type="number" placeholder="Your Age" name="Age" />
                    </div>
                    <div class="form-group custom-input">
                        <input class="form-control" type="password" placeholder="Your Password" name="Password" />
                    </div>
                    <div class="form-group custom-input">
                        <input class="form-control" type="number" placeholder="Amount of Products" name="AmountOfProducts" />
                    </div>
                    <button class="btn btn-primary" type="submit">Send Form</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
