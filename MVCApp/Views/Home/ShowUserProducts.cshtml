@using MVCApp.ViewModels
@using MVCApp.Models
@model ProductsViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>My Website</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        body {
            background-color: #f4f4f4;
        }

        section {
            margin-top: 20px;
            padding: 20px;
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        a.btn-back {
            margin: 20px;
        }

        table {
            width: 100%;
        }

        input.form-control {
            width: 100%;
        }

        button.btn-primary {
            background-color: #007bff;
        }

        label {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <a asp-action="Index" asp-controller="Home" class="btn btn-back btn-primary">Back</a>
    <section>
        <h2>User: @Model.Products.ToList()[0].User.Name</h2>
    </section>
    <section>
        
            <table class="table table-striped table-bordered">
                @for (int i = 0; i < Model.Products.Count(); i++)
                {
                    var item = Model.Products.ElementAt(i);
                    if (item != null)
                {
                    <form asp-action="ChangeProducts" asp-controller="Home" method="post">
                        <tr>
                            <td>
                                <label >Product ID</label>
                                <input type="hidden" asp-for="@item.Id" value="@item.Id" name="Id"  class="form-control" />
                                <input disabled value="@item.Id"  class="form-control" />
                            </td>
                            <td>
                                <label >Product Name</label>
                                <input asp-for="@item.Name" value="@item.Name" name="Name" class="form-control" />
                            </td>
                            <td>
                                <label >Product Description</label>
                                <input asp-for="@item.Description" value="@item.Description" name="Description" class="form-control" />
                            </td>
                            <td class="text-center">
                                <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
                            </td>
                        </tr> 
                    </form>
                    }
                }
            </table>
        
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
