@{
    ViewBag.Title = "Download Files";
}

<div class="container">
    <div class="row justify-content-left mt-4">
        <div class="col-md-6">
            <h2 class="mt-4">Download Files</h2>
            <form method="post" action="/File/DownloadFile" class="form">
                <div class="form-group">
                    <label for="firstName">First Name</label>
                    <input type="text" name="firstName" id="firstName" class="form-control">
                </div>
                <div class="form-group mt-4">
                    <label for="lastName">Last Name</label>
                    <input type="text" name="lastName" id="lastName" class="form-control">
                </div>
                <div class="form-group mt-4">
                    <label for="fileName">File Name</label>
                    <input type="text" name="fileName" id="fileName" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary mt-4">Download</button>
            </form>
        </div>
        <div class="col-md-6">
            <h2 class="mt-4">Choose a File</h2>
            <form id="fileSelectionForm" method="post" action="/File/ViewFile">
                <div class="form-group mt-2">
                    <label for="selectedFile">Select a File</label>
                    <div class="d-flex">
                        <select name="selectedFile" id="selectedFile" class="form-control mr-2">
                            @foreach (var file in ViewBag.FileList)
                            {
                                <option value="@file">@file</option>
                            }
                        </select>
                        <button type="submit" id="viewFileButton" class="btn btn-primary btn-sm">View</button>
                    </div>
                </div>
            </form>

            <div class="mt-4">
                <h2>File Content</h2>
                <textarea id="fileContentView" class="form-control" rows="6" readonly>@ViewBag.SelectedFileContent</textarea>
            </div>
        </div>
    </div>
</div>
