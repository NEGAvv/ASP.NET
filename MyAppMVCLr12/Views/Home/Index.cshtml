@{
    ViewData["Title"] = "Companies";
}

@model List<Company>

<h1>Companies</h1>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var company in Model)
            {
                <tr>
                    <td>@company.Id</td>
                    <td>@company.Name</td>
                    <td>@company.Description</td>
                </tr>
            }
        </tbody>
    </table>
</div>
