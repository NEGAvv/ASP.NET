@model User
@{
    Layout = null;
    ViewBag.Title = "Реєстрація";
    
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyAppMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyAppLr7.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <p class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MyApp</p>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="container">
                <div class="row justify-content-left mt-4">
                    <div class="col-md-6">
                        <h2 class="mt-4">Реєстрація</h2>
                        <form method="post" asp-action="SignUp" class="form">
                            <div class="form-group">
                                <label asp-for="Login">Ваш логін</label>
                                <input type="text" asp-for="Login" class="form-control" required>
                                <span asp-validation-for="Login" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-2">
                                <label asp-for="Password">Ваш пароль</label>
                                <input type="password" asp-for="Password" class="form-control" required>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-2">
                                <label asp-for="RepeatPassword">Повторіть пароль</label>
                                <input type="password" asp-for="RepeatPassword" class="form-control" required>
                                <span asp-validation-for="RepeatPassword" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary mt-4">Підтвердити</button>
                        </form>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <footer style="position:absolute; bottom: 0; " class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - MyAppMVC  @* <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

</body>
</html>


