@model Product
@{
    ViewBag.Title = "Add Product";
}

<div class="container">
    <div class="row justify-content-left mt-4">
        <div class="col-md-6">
            <h2 class="mt-4">Add Products</h2>
            <form method="post" asp-action="AddProduct" class="form">
                <div class="form-group">
                    <label asp-for="Name">Name of Product</label>
                    <input type="text" asp-for="Name" class="form-control" required>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Price">Price</label>
                    <input type="number" asp-for="Price" class="form-control" required>
                    <span asp-validation-for="Price" class="text-danger">The number should be positive</span>
                </div>
                <button type="submit" class="btn btn-primary mt-4">Add</button>
            </form>
        </div>
    </div>
</div>
