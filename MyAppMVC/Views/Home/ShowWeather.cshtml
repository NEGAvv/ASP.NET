@model Coord
@{
    var weather = await Component.InvokeAsync("Weather", Model);
    // var _coord = new Coord();
    // _coord.lat = 47.16371341405852;
    // _coord.lon = 33.9361136359237;
}

<div class="container">
    <div class="row justify-content-left mt-4">
        <div class="col-md-6">
            <h2 class="mt-4">Set coordinates of wanted location</h2>
            <form method="post" asp-action="SetLocationCoords" class="form">
                <div class="form-group">
                    <label asp-for="latitude">Latitude</label>
                    <input asp-for="latitude" type="number" class="form-control" id="latitude" name="latitude" min="-90" max="90" step="any" placeholder="Enter latitude" value="@Model.latitude" required>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="longitude">Longitude</label>
                    <input asp-for="longitude" type="number" class="form-control" id="longitude" name="longitude" min="-180" max="180" step="any" placeholder="Enter longitude" value="@Model.longitude" required>
                </div>
                <button type="submit" class="btn btn-primary mt-4">Add</button>
            </form>
        </div>
    </div>
    @weather
</div>

